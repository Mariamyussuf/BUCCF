{
  "name": "Fellowship Connect",
  "short_name": "Fellowship",
  "description": "Comprehensive church management system for BUCCF",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#0d6efd",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "categories": ["lifestyle", "productivity", "social"],
  "icons": [
    {
      "src": "/icons/icon-192x192.svg",
      "sizes": "192x192",
      "type": "image/svg+xml",
      "purpose": "any"
    },
    {
      "src": "/icons/icon-512x512.svg",
      "sizes": "512x512",
      "type": "image/svg+xml",
      "purpose": "any"
    }
  ],
  "shortcuts": [
    {
      "name": "Mark Attendance",
      "short_name": "Attendance",
      "description": "Quickly mark your attendance",
      "url": "/attendance",
      "icons": [
        {
          "src": "/icons/attendance-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Prayer Requests",
      "short_name": "Prayers",
      "description": "Submit or view prayer requests",
      "url": "/prayers",
      "icons": [
        {
          "src": "/icons/prayer-shortcut.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Testimonies",
      "short_name": "Testimonies",
      "description": "Read inspiring testimonies",
      "url": "/testimonies",
      "icons": [
        {
          "src": "/icons/testimony-shortcut.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+fellowship",
      "url": "/?handler=%s"
    }
  ]
}
